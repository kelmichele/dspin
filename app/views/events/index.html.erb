<% @page_title = "Upcoming Events" %>
<% @page_description = "" %>


<div class="full-sec">
	<div class="inside med">
		<h1 class="text-center"><%= @page_title %></h1>
		<% if user_signed_in? && current_user.admin? %>
	    <button class="admin-uk wl-uk uk-float-right" type="button"><span  uk-icon="icon: settings;"></span></button>
	    <div uk-dropdown="mode: click; pos: bottom-right; boundary: .wl-uk;">
				<%= link_to "Create New Event", new_event_path, class: 'ds-link' %>
	    </div>
		<% end %>
		<hr>
		<% @events.each do |event| %>
			<!-- <style type="text/css">
				.event-li.event-<= event.id %> {
					< if event.image.attached? %>
						background-image: url(<= rails_blob_url(event.image) %>);
						< else %>
						background-image: url(/assets/home-slide-bone.jpg);
					< end %>
				}
			</style> -->

			<%= link_to event_path(event), class: "event-li event-#{event.id}" do %>
			  <h3 class="title"><%= event.title %></h3>
			<% end %>
		<% end %>
	</div>
</div>