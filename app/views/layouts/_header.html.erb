<div class="mobile-above">
  <div class="inside">
    <div class="nb-logo mobile">
      <%= link_to root_path, class: 'logo-name' do %>
        Dana Spinola.
      <% end %>
    </div>

    <div class="mobile-nav">
      <button class="uk-button" type="button" uk-toggle="target: #offcanvas-nav">
        <span class="mmenu" uk-icon="icon: menu; ratio: 1.5;"></span>
      </button>
      <%= render 'layouts/mobile-nav' %>
    </div>
  </div>
</div>

<header class="inline-header centered">
<!-- <header class="inline-header centered" uk-sticky="sel-target: .inline-header; cls-active: uk-navbar-sticky"> -->
  <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
    <div class="navbar-center">
      <div class="nb-logo">
        <%= link_to(image_tag('ds-logo.png', class: 'img-responsive', alt: ''), root_path, class: 'logo-name') %>
      </div>

      <div class="navstick">
        <ul class="uk-navbar-nav">
          <li class="<% if current_page?('/about') %>active<% end %>"><%= link_to "About", about_path %></li>
          <!-- <li><%= link_to "Events", events_path %></li> -->

          <li class="<% if current_page?('/speaking') || current_page?('/past-events') || current_page?('/speaking-info') %>active<% end %>">
            <%= link_to "Speaking", speaking_path %>
            <div class="uk-navbar-dropdown">
              <ul class="uk-nav uk-navbar-dropdown-nav">
                <li><%= link_to "Past Events", past_events_path %></li>
                <li><%= link_to "Messages", speaking_info_path %></li>
              </ul>
            </div>
          </li>

          <li class="<% if current_page?('/love-what-you-do') %>active<% end %>"><%= link_to "Book", love_what_you_do_path %></li>
          <li class="<% if current_page?('/press') %>active<% end %>"><%= link_to "Press", press_path %></li>
          <li class="<% if current_page?('/heart') %>active<% end %>"><%= link_to "Heart", heart_path %></li>
           
          <li class="fab"><%= link_to(image_tag('fabrik.png', alt: "fab'rik logo", class: 'nav-fab'), '/fab', target: '_blank') %></li>
        </ul>
      </div>

    </div>
  </nav>
</header>

<% unless current_page?(root_path) %>
<%= render 'shared/collage-hd' %>
<% end %>